							"ServerName": {
								"value": "@pipeline().parameters.ServerName",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"StorageName": {
				"type": "string",
				"defaultValue": "synapsee2elake"
			},
			"DatabaseName": {
				"type": "string",
				"defaultValue": "synapsee2edw"
			},
			"ServerName": {
				"type": "string",
				"defaultValue": "synapsee2e"
			},
			"SparkPoolName": {
				"type": "string",
				"defaultValue": "synapsee2espark"
			},
			"DatasetSize": {
				"type": "string",
				"defaultValue": "1tb"
